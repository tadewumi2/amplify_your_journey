<div class="container py-4">
  <h2>Shopping Cart</h2>

  <% if @cart_items.any? %>
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Cart Items</h5>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @cart_items.each do |item| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <% if item[:product].image.attached? %>
                            <%= image_tag item[:product].image, class: "me-3 rounded", style: "width: 60px; height: 60px; object-fit: cover;" %>
                          <% elsif item[:product].image_url.present? %>
                            <img src="<%= item[:product].image_url %>" class="me-3 rounded" style="width: 60px; height: 60px; object-fit: cover;" alt="<%= item[:product].name %>">
                          <% else %>
                            <img src="https://via.placeholder.com/60x60/6c757d/ffffff?text=<%= CGI.escape(item[:product].name[0..2]) %>"
                                 class="me-3 rounded" alt="<%= item[:product].name %>">
                          <% end %>
                          <div>
                            <h6 class="mb-0"><%= item[:product].name %></h6>
                            <small class="text-muted"><%= item[:product].category.name %></small>
                            <% if item[:product].is_new? %>
                              <span class="badge bg-success">New</span>
                            <% end %>
                            <% if item[:product].on_sale? %>
                              <span class="badge bg-warning">Sale</span>
                            <% end %>
                          </div>
                        </div>
                      </td>
                      <td>$<%= item[:product].current_price %></td>
                      <td>
                        <%= form_with url: cart_update_path, method: :patch, local: true, class: "d-flex align-items-center" do |f| %>
                          <%= f.hidden_field :product_id, value: item[:product].id %>
                          <%= f.number_field :quantity, value: item[:quantity], min: 1,
                                             max: item[:product].stock_quantity,
                                             class: "form-control form-control-sm me-2",
                                             style: "width: 80px;" %>
                          <%= f.submit "Update", class: "btn btn-outline-secondary btn-sm" %>
                        <% end %>
                      </td>
                      <td class="fw-bold">$<%= item[:subtotal] %></td>
                      <td>
                        <%= link_to "Remove", cart_remove_path(product_id: item[:product].id),
                                    method: :delete,
                                    class: "btn btn-outline-danger btn-sm",
                                    confirm: "Are you sure?",
                                    data: { turbo: false } %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="mt-3">
          <%= link_to "Continue Shopping", products_path, class: "btn btn-outline-primary" %>
          <%= link_to "Clear Cart", cart_clear_path, method: :delete,
                      class: "btn btn-outline-danger",
                      confirm: "Are you sure you want to clear your cart?",
                      data: { turbo: false } %>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Order Summary</h5>
          </div>
          <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
              <span>Subtotal:</span>
              <span>$<%= @total %></span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span>Shipping:</span>
              <span>Free</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span>Tax (estimated):</span>
              <span>$<%= (@total * 0.13).round(2) %></span>
            </div>
            <hr>
            <div class="d-flex justify-content-between mb-3">
              <strong>Total:</strong>
              <strong class="text-primary">$<%= (@total * 1.13).round(2) %></strong>
            </div>

            <% if logged_in? %>
              <%= link_to "Proceed to Checkout", new_order_path, class: "btn btn-primary w-100" %>
            <% else %>
              <p class="text-muted mb-2">Please login to checkout</p>
              <%= link_to "Login", login_path, class: "btn btn-primary w-100 mb-2" %>
              <%= link_to "Sign Up", signup_path, class: "btn btn-outline-primary w-100" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="fas fa-shopping-cart fa-4x text-muted"></i>
      </div>
      <h4>Your cart is empty</h4>
      <p class="text-muted mb-4">Start shopping to add items to your cart.</p>
      <%= link_to "Browse Products", products_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>