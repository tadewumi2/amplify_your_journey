<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Login</h4>
        </div>
        <div class="card-body">
          <!-- HTML form with data-turbo="false" to disable Turbo -->
          <form action="/login" method="post" data-turbo="false">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" name="email" id="email" class="form-control" required
                     value="admin@riseandresound.com">
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" name="password" id="password" class="form-control" required
                     value="password123">
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Login</button>
            </div>
          </form>

          <hr>

          <div class="text-center">
            <p class="mb-0">Don't have an account?</p>
            <a href="/signup" class="btn btn-outline-primary">Sign up here</a>
          </div>

          <div class="mt-3 p-3 bg-light rounded">
            <small class="text-muted">
              <strong>Demo Login:</strong><br>
              Email: admin@riseandresound.com<br>
              Password: password123
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
