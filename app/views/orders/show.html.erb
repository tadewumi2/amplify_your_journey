<div class="container py-4">
  <div class="text-center mb-4">
    <div class="alert alert-success">
      <h4 class="alert-heading">Order Placed Successfully!</h4>
      <p>Thank you for your order. We'll send you updates via email.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Order #<%= @order.id %></h5>
          <small class="text-muted">Placed on <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></small>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <h6>Order Status</h6>
            <span class="badge bg-<%= @order.status == 'pending' ? 'warning' : 'success' %> fs-6">
              <%= @order.status.titleize %>
            </span>
          </div>

          <div class="mb-4">
            <h6>Items Ordered</h6>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                  </tr>
                </thead>
                <tbody>
                  <% @order.order_items.each do |item| %>
                    <tr>
                      <td>
                        <%= link_to item.product.name, product_path(item.product),
                                    class: "text-decoration-none" %>
                        <br>
                        <small class="text-muted"><%= item.product.category.name %></small>
                      </td>
                      <td>$<%= item.unit_price %></td>
                      <td><%= item.quantity %></td>
                      <td>$<%= item.quantity * item.unit_price %></td>
                    </tr>
                  <% end %>
                </tbody>
                <tfoot>
                  <tr>
                    <th colspan="3">Total:</th>
                    <th>$<%= @order.total_price %></th>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-4 text-center">
        <%= link_to "Continue Shopping", products_path, class: "btn btn-primary" %>
        <%= link_to "View All Orders", orders_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
