<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Categories</h2>
  <%= link_to "Add New Category", new_admin_category_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body">
    <% if @categories.any? %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Products</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><strong><%= category.name %></strong></td>
                <td><%= pluralize(category.products.count, 'product') %></td>
                <td>
                  <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-outline-secondary btn-sm" %>
                  <%= link_to "Delete", admin_category_path(category), method: :delete,
                              class: "btn btn-outline-danger btn-sm",
                              confirm: "Are you sure?" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-4">
        <h5>No categories yet</h5>
        <p class="text-muted">Start by adding your first category.</p>
        <%= link_to "Add Category", new_admin_category_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
