<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Order #<%= @order.id %></h2>
  <%= link_to "Back to Orders", admin_orders_path, class: "btn btn-outline-secondary" %>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Order Details</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <% @order.order_items.each do |item| %>
                <tr>
                  <td>
                    <strong><%= item.product.name %></strong>
                    <br>
                    <small class="text-muted"><%= item.product.category.name %></small>
                  </td>
                  <td>$<%= item.unit_price %></td>
                  <td><%= item.quantity %></td>
                  <td><strong>$<%= item.quantity * item.unit_price %></strong></td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <th colspan="3">Total:</th>
                <th><strong>$<%= @order.total_price %></strong></th>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Customer & Status</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <h6>Customer</h6>
          <p class="mb-1"><strong><%= @order.user.name %></strong></p>
          <p class="mb-0 text-muted"><%= @order.user.email %></p>
        </div>

        <div class="mb-3">
          <h6>Order Date</h6>
          <p><%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>

        <div class="mb-3">
          <h6>Status</h6>
          <%= form_with model: [:admin, @order], local: true do |f| %>
            <%= f.select :status,
                         options_for_select([
                           ['Pending', 'pending'],
                           ['Processing', 'processing'],
                           ['Shipped', 'shipped'],
                           ['Delivered', 'delivered'],
                           ['Cancelled', 'cancelled']
                         ], @order.status),
                         {},
                         { class: "form-select mb-2" } %>
            <%= f.submit "Update Status", class: "btn btn-primary btn-sm w-100" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
