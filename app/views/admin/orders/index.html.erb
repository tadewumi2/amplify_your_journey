<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Orders Management</h2>
</div>

<div class="card">
  <div class="card-body">
    <% if @orders.any? %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Order #</th>
              <th>Customer</th>
              <th>Items</th>
              <th>Total</th>
              <th>Status</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><strong>#<%= order.id %></strong></td>
                <td>
                  <%= order.user.name %>
                  <br>
                  <small class="text-muted"><%= order.user.email %></small>
                </td>
                <td><%= pluralize(order.order_items.count, 'item') %></td>
                <td><strong>$<%= order.total_price %></strong></td>
                <td>
                  <span class="badge bg-<%= order.status == 'pending' ? 'warning' : order.status == 'processing' ? 'info' : 'success' %>">
                    <%= order.status.titleize %>
                  </span>
                </td>
                <td><%= order.created_at.strftime("%m/%d/%Y %I:%M %p") %></td>
                <td>
                  <%= link_to "View", admin_order_path(order), class: "btn btn-outline-primary btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-4">
        <h5>No orders yet</h5>
        <p class="text-muted">Orders will appear here when customers start purchasing.</p>
      </div>
    <% end %>
  </div>
</div>
