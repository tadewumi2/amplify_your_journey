<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Content Management</h2>
  <small class="text-muted">Edit website pages</small>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">About Page</h5>
        <%= link_to "Edit", admin_content_edit_about_path, class: "btn btn-sm btn-primary" %>
      </div>
      <div class="card-body">
        <h6><%= @about_content.title %></h6>
        <p class="text-muted"><%= truncate(@about_content.content, length: 200) %></p>
        <small class="text-muted">Last updated: <%= @about_content.updated_at.strftime("%B %d, %Y at %I:%M %p") %></small>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Contact Page</h5>
        <%= link_to "Edit", admin_content_edit_contact_path, class: "btn btn-sm btn-primary" %>
      </div>
      <div class="card-body">
        <h6><%= @contact_content.title %></h6>
        <p class="mb-1"><strong>Email:</strong> <%= @contact_content.data['email'] %></p>
        <p class="mb-1"><strong>Address:</strong> <%= @contact_content.data['address'] %></p>
        <p class="mb-1"><strong>Phone:</strong> <%= @contact_content.data['phone'] %></p>
        <small class="text-muted">Last updated: <%= @contact_content.updated_at.strftime("%B %d, %Y at %I:%M %p") %></small>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Quick Actions</h5>
      </div>
      <div class="card-body">
        <div class="btn-group">
          <%= link_to "Preview About Page", about_path, class: "btn btn-outline-info", target: "_blank" %>
          <%= link_to "Preview Contact Page", contact_path, class: "btn btn-outline-info", target: "_blank" %>
        </div>
      </div>
    </div>
  </div>
</div>
