<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Users Management</h2>
</div>

<div class="card">
  <div class="card-body">
    <% if @users.any? %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Orders</th>
              <th>Joined</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <strong><%= user.name %></strong>
                  <% if user.admin? %>
                    <span class="badge bg-danger">Admin</span>
                  <% end %>
                </td>
                <td><%= user.email %></td>
                <td><%= pluralize(user.orders.count, 'order') %></td>
                <td><%= user.created_at.strftime("%m/%d/%Y") %></td>
                <td>
                  <%= link_to "View", admin_user_path(user), class: "btn btn-outline-primary btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-4">
        <h5>No users yet</h5>
        <p class="text-muted">Users will appear here when they register.</p>
      </div>
    <% end %>
  </div>
</div>