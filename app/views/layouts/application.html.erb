<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Rise and Resound - Motivational Products & Speaking</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <%= link_to "Amplify the Journey", root_path, class: "navbar-brand fw-bold" %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <%= link_to "Products", products_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Book Speaking", new_booking_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "About", about_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Contact", contact_path, class: "nav-link" %>
            </li>
          </ul>

          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to cart_path, class: "nav-link" do %>
                Cart (<%= cart_total_items %>)
              <% end %>
            </li>

            <% if logged_in? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                  <%= current_user.name %>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "My Orders", orders_path, class: "dropdown-item" %></li>
                  <% if current_user.admin? %>
                    <li><hr class="dropdown-divider"></li>
                    <li><%= link_to "Admin Dashboard", admin_root_path, class: "dropdown-item" %></li>
                  <% end %>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to "Logout", logout_path, method: :delete, class: "dropdown-item" %></li>
                </ul>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", login_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Up", signup_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= flash[:notice] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= flash[:alert] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <!-- Main Content -->
    <main>
      <%= render 'shared/flash_messages' %>
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h5>Rise and Resound</h5>
            <p>Empowering individuals through storytelling, personal development, and resilience training.</p>
          </div>
          <div class="col-md-3">
            <h6>Quick Links</h6>
            <ul class="list-unstyled">
              <li><%= link_to "Products", products_path, class: "text-light" %></li>
              <li><%= link_to "Book Speaking", new_booking_path, class: "text-light" %></li>
              <li><%= link_to "About", about_path, class: "text-light" %></li>
              <li><%= link_to "Contact", contact_path, class: "text-light" %></li>
            </ul>
          </div>
          <div class="col-md-3">
            <h6>Contact</h6>
            <p class="mb-1">Winnipeg, Manitoba</p>
            <p>tosin@riseandresound.com</p>
          </div>
        </div>
        <hr class="my-3">
        <div class="text-center">
          <small>&copy; <%= Date.current.year %> Rise and Resound. All rights reserved.</small>
        </div>
      </div>
    </footer>
  </body>
</html>