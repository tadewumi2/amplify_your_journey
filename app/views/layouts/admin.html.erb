<!DOCTYPE html>
<html>
  <head>
    <title>Admin Dashboard - Rise and Resound</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body>
    <!-- Admin Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <%= link_to "Admin Dashboard", admin_root_path, class: "navbar-brand" %>

        <div class="navbar-nav me-auto">
          <%= link_to "Products", admin_products_path, class: "nav-link" %>
          <%= link_to "Categories", admin_categories_path, class: "nav-link" %>
          <%= link_to "Orders", admin_orders_path, class: "nav-link" %>
          <%= link_to "Users", admin_users_path, class: "nav-link" %>
          <%= link_to "Bookings", admin_bookings_path, class: "nav-link" %>
        </div>

        <div class="navbar-nav">
          <%= link_to "View Site", root_path, class: "nav-link", target: "_blank" %>
          <%= link_to "Logout", logout_path, method: :delete, class: "nav-link" %>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible fade show m-0" role="alert">
        <%= flash[:notice] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert alert-danger alert-dismissible fade show m-0" role="alert">
        <%= flash[:alert] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="container-fluid py-4">
      <%= yield %>
    </main>
  </body>
</html>
