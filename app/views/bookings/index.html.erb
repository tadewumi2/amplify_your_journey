<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Speaking Bookings</h2>
</div>

<div class="card">
  <div class="card-body">
    <% if @bookings.any? %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Organization</th>
              <th>Event Type</th>
              <th>Preferred Date</th>
              <th>Submitted</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @bookings.each do |booking| %>
              <tr>
                <td><strong><%= booking.name %></strong></td>
                <td><%= booking.organization %></td>
                <td><span class="badge bg-info"><%= booking.event_type.humanize %></span></td>
                <td><%= booking.preferred_date.strftime("%B %d, %Y") %></td>
                <td><%= booking.created_at.strftime("%m/%d/%Y") %></td>
                <td>
                  <%= link_to "View", admin_booking_path(booking), class: "btn btn-outline-primary btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-4">
        <h5>No booking requests yet</h5>
        <p class="text-muted">Speaking requests will appear here when submitted.</p>
      </div>
    <% end %>
  </div>
</div>