<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Book a Speaking Engagement</h4>
          <small class="text-muted">Let's discuss how Rise and Resound can inspire your audience</small>
        </div>
        <div class="card-body">
          <%= form_with model: @booking, local: true do |f| %>
            <% if @booking.errors.any? %>
              <div class="alert alert-danger">
                <h6>Please fix the following errors:</h6>
                <ul class="mb-0">
                  <% @booking.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :name, class: "form-label" %>
                  <%= f.text_field :name, class: "form-control",
                                   value: (current_user&.name if logged_in?), required: true %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :email, class: "form-label" %>
                  <%= f.email_field :email, class: "form-control",
                                    value: (current_user&.email if logged_in?), required: true %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :event_type, class: "form-label" %>
                  <%= f.select :event_type,
                               options_for_select([
                                 ['School Assembly', 'school_assembly'],
                                 ['Corporate Workshop', 'corporate_workshop'],
                                 ['Youth Event', 'youth_event'],
                                 ['Conference', 'conference'],
                                 ['Other', 'other']
                               ]),
                               { prompt: 'Select event type' },
                               { class: "form-select", required: true } %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :organization, class: "form-label" %>
                  <%= f.text_field :organization, class: "form-control",
                                   placeholder: "School, company, or organization name", required: true %>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :preferred_date, class: "form-label" %>
              <%= f.date_field :preferred_date, class: "form-control",
                               min: Date.current, required: true %>
              <div class="form-text">Preferred date for the event</div>
            </div>

            <div class="mb-3">
              <%= f.label :notes, "Additional Details", class: "form-label" %>
              <%= f.text_area :notes, rows: 4, class: "form-control",
                              placeholder: "Tell us about your event, audience size, specific topics of interest, etc." %>
            </div>

            <div class="d-grid">
              <%= f.submit "Submit Speaking Request", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-4">
        <div class="row">
          <div class="col-md-4">
            <div class="text-center">
              <h6>School Assemblies</h6>
              <p class="small text-muted">Inspiring students through storytelling and resilience training</p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="text-center">
              <h6>Corporate Workshops</h6>
              <p class="small text-muted">Team building and personal development for organizations</p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="text-center">
              <h6>Youth Programs</h6>
              <p class="small text-muted">Empowering young people through motivational speaking</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>